{
  "manifest_version": 3,
  "name": "Screenshot Extension",
  "version": "1.0",
  "host_permissions": [
    "*://*.cricbuzz.com/",
    "*://chrome-extension-backend-rriv.onrender.com/"
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "background",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://www.cricbuzz.com/*", "https://www.cricbuzz.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

{
  "manifest_version": 3,
  "name": "Find USA Slot",
  "version": "1.0",
  "host_permissions": ["*://16.16.27.18/", "<all_urls>", "*://127.0.0.1/"],
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "background",
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://127.0.0.1:5500/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
